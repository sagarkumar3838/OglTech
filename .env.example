# ==============================================
# CENTRALIZED ENVIRONMENT VARIABLES
# Copy this to .env and fill in your values
# ==============================================

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# API Configuration
VITE_API_URL=http://localhost:5001/your-project-id/us-central1/api
# Production: https://us-central1-your-project-id.cloudfunctions.net/api

# ==============================================
# AI PROVIDER CONFIGURATION
# Add API keys for providers you want to use
# System will automatically use available providers
# ==============================================

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-pro

# X.AI (Grok)
XAI_API_KEY=xai-your-grok-api-key-here
XAI_MODEL=grok-beta

# Groq (Fast Inference) - FREE TIER AVAILABLE
# Get your key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# DeepSeek (Very Affordable) - $0.14 per 1M tokens
# Get your key: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# ==============================================
# RAG CONFIGURATION
# Retrieval-Augmented Generation Settings
# ==============================================

# Enable RAG mode (uses question bank + AI)
RAG_ENABLED=true

# RAG Strategy: hybrid | rag_only | ai_only
# hybrid: Mix of question bank + AI generated
# rag_only: Only use question bank
# ai_only: Only use AI generation
RAG_STRATEGY=hybrid

# Percentage of questions from question bank (0-100)
RAG_QUESTION_BANK_PERCENTAGE=40

# Minimum similarity score for RAG retrieval (0-1)
RAG_SIMILARITY_THRESHOLD=0.7

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_ENABLED=true

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

NODE_ENV=development
PORT=5001

# AI Provider Priority (comma-separated)
# System will try providers in this order
AI_PROVIDER_PRIORITY=anthropic,openai,google,groq,xai
