{
  "name": "server",
  "version": "2.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "serve": "firebase emulators:start --only functions",
    "deploy": "npm run build && firebase deploy --only functions",
    "deploy:render": "npm run build",
    "type-check": "tsc --noEmit",
    "seed:careers": "tsx ../scripts/seed-careers.ts",
    "seed:ogl-careers": "tsx ../scripts/seed-ogl-careers.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.5",
    "openai": "^4.28.0",
    "rate-limit-redis": "^4.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
