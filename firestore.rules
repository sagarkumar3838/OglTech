rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Careers collection - public read, admin write
    match /careers/{careerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Evaluations collection - authenticated users
    match /evaluations/{evaluationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Questions collection - admin only write
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Scorecards collection
    match /scorecards/{scorecardId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User Progress collection - NEW
    match /user_progress/{progressId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }
    
    // Evaluation Cache collection - NEW
    match /evaluation_cache/{cacheId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Question Bank collection - NEW
    match /question_bank/{questionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Submissions collection
    match /submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
